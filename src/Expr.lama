
import List;
import State;

public fun binopOp(op, l, r)
{
    case op of
		  "+" -> l + r 
		| "-" -> l - r 
		| "*" -> l * r 
		| "/" -> l / r 
		| "%" -> l % r
		| "==" -> l == r 
		| "!=" -> l != r 
		| "<" -> l < r 
		| ">" -> l > r 
		| "<=" -> l <= r 
		| ">=" -> l >= r 
		| "&&" -> l && r 
		| "!!" -> l !! r
    esac
}

public fun evalExpr (st, expr) {
	case expr of
		  Const (n)	-> n
		| Var (x)	-> st(x)
		| Binop (op, l, r) -> binopOp(op, evalExpr(st, l), evalExpr(st, r))
	esac
}